{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/layer.json",
    "title": "Inscribed Layer",
    "description": "A single material layer of writing, illustration, decoration, or other markings that conveys the intellectual and creative content of a scribal production unit",
    "type": "object",
    "properties": {
        "ark": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
        },
        "reconstruction": {
            "type": "boolean"
        },
        "state": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/states_layer"
        },
        "label": {
            "type": "string"
        },
        "locus": {
            "type": "string"
        },
        "summary": {
            "type": "string"
        },
        "extent": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/extent"
        },
        "writing": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/writing.json"
            },
            "minItems": 1,
            "unevaluatedItems": false
        },
        "ink": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/ink.json"
            },
            "unevaluatedItems": false
        },
        "layout": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/layout.json"
            },
            "unevaluatedItems": false
        },
        "text_unit": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
                    },
                    "label": {
                        "type": "string"
                    },
                    "locus": {
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "label"
                ],
                "unevaluatedProperties": false
            },
            "minItems": 1,
            "unevaluatedItems": false
        },
        "para": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/paracontent.json"
            },
            "unevaluatedItems": false
        },
        "assoc_date": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/assoc_date.json"
            },
            "unevaluatedItems": false
        },
        "assoc_name": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/assoc_name.json"
            },
            "unevaluatedItems": false
        },
        "assoc_place": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/assoc_place.json"
            },
            "unevaluatedItems": false
        },
        "features": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/controlled_term"
            },
            "unevaluatedItems": false
        },
        "related_mss": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/related_mss.json"
            },
            "unevaluatedItems": false
        },
        "note": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/note.json"
            },
            "unevaluatedItems": false
        },
        "bib": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/bib.json"
            },
            "unevaluatedItems": false
        },
        "desc_provenance": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/desc_provenance"
        },
        "cataloguer": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/change_log_entry"
            },
            "unevaluatedItems": false
        },
        "reconstructed_from": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
            },
            "unevaluatedItems": false
        },
        "parent": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
            },
            "minItems": 1,
            "unevaluatedItems": false
        }
    },
    "required": [
        "ark",
        "reconstruction",
        "state",
        "label",
        "writing",
        "text_unit",
        "parent"
    ],
    "unevaluatedProperties": false,
    "if": {
        "properties": {
            "reconstruction": {"const": true}
        },
        "required": ["reconstruction"]
    },
    "then": {
        "properties": {
            "reconstructed_from": {
                "type": "array",
                "items": {
                    "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
                },
                "unevaluatedItems": false
            }
        },
        "required": ["reconstructed_from"]
    }
}