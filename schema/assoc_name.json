{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/assoc_name.json",
    "title": "Associated Name",
    "description": "A person, group, or organization entity (i.e., Agent) connected with an object via a given role",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
        },
        "value": {
            "type": "string"
        },
        "as_written": {
            "type": "string"
        },
        "role": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/controlled_term"
        },
        "note": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "unevaluatedItems": false
        }
    },
    "required": [
        "role"
    ],
    "unevaluatedProperties": false
}