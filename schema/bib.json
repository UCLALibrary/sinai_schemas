{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/bib.json",
    "title": "Bibliography",
    "description": "A bibliographic citation connected with an object or entity",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "shortcode": {
            "type": "string"
        },
        "citation": {
            "type": "string"
        },
        "type": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/controlled_term"
        },
        "range": {
            "type": "string"
        },
        "alt_shelf": {
            "type": "string"
        },
        "url": {
            "type": "string"
        },
        "note": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "unevaluatedItems": false
        }
    },
    "required": [
        "id",
        "shortcode",
        "citation",
        "type"
    ],
    "if": {
        "properties": {
            "type": {
                "const": {
                    "id": "otherdigversion",
                    "label": "Other Digital Version"
                }
            }
        },
        "required": ["type"]
    },
    "then": {
        "properties": {
            "url": {
                "type": "string"
            },
            "id": {
                "type": "string",
                "format": "uuid"
            }
        },
        "required": [
            "id",
            "shortcode",
            "citation",
            "type",
            "url"
        ]
    },
    "unevaluatedProperties": false
}