{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/work_witness.json",
    "title": "Work Witness",
    "description": "A Work Witness is a piece of content that forms part of a text unit within a manuscript and attests a distinct conceptual work",
    "type": "object",
    "properties": {
        "work": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
                        }
                    },
                    "required": ["id"],
                    "unevaluatedProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "desc_title": {
                            "type": "string"
                        },
                        "creator": {
                            "type": "array",
                            "items": {
                                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
                            },
                            "unevaluatedItems": false
                        },
                        "genre": {
                            "type": "array",
                            "items": {
                                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/controlled_term"
                            },
                            "unevaluatedItems": false     
                        }
                    },
                    "required": [
                        "desc_title"
                    ],
                    "unevaluatedProperties": false
                }
            ]
        },
        "alt_title": {
            "description": "An alternative title providing witness-specific information about the work",
            "type": "string"
        },
        "as_written": {
            "type": "string"
        },
        "locus": {
            "type": "string"
        },
        "excerpt": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/excerpt.json"
            },
            "unevaluatedItems": false
        },
        "contents": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/contents"
            },
            "unevaluatedItems": false
        },
        "note": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "unevaluatedItems": false
        },
        "bib": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/bib.json"
            },
            "unevaluatedItems": false
        }
    },
    "required": [
        "work"
    ],
    "unevaluatedProperties": false
}