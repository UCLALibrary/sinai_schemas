    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/note.json",
    "title": "Note",
    "description": "A prose note of a specified type",
    "type": "object",
    "properties": 
    {
        "type": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/controlled_term"
