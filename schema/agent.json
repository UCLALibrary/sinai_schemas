{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/agent.json",
    "title": "Agent",
    "description": "A record for an agent, either an individual or an organization, capable of acting in the production of material objects or creation of conceptual works",
    "type": "object",
    "properties": {
        "ark": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
        },
        "type": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/agent_types"
        },
        "pref_name": {
            "type": "string"
        },
        "alt_name": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "unevaluatedItems": false        
        },
        "desc": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/summary"
        },
        "gender": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/genders"
        },
        "birth": {
            "type": "object",
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/date_core",
            "required": ["iso"],
            "unevaluatedProperties": false
        },
        "death": {
            "type": "object",
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/date_core",
            "required": ["iso"],
            "unevaluatedProperties": false
        },
        "floruit": {
            "type": "object",
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/date_core",
            "required": ["iso"],
            "unevaluatedProperties": false
        },
        "rel_con": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/rel_con"
            },
            "unevaluatedItems": false
        },
        "refno": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/refno"
            },
            "unevaluatedItems": false
        },
        "bib": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/bib.json"
            },
            "unevaluatedItems": false
        },
        "note": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "unevaluatedItems": false
        },
        "rel_agent": {
            "type": "array",
            "items": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/rel_entity_core"
                    }
                ],
                "properties": {
                    "rel": {
                        "type": "array",
                        "items": {
                            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/agent_agent_rels"
                        },
                        "unevaluatedItems": false
                    }
                },
                "required": [
                    "rel"
                ],
                "unevaluatedProperties": false
            },
            "unevaluatedItems": false
        },
        "rel_place": {
            "type": "array",
            "items": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/rel_entity_core"
                    }
                ],
                "properties": {
                    "rel": {
                        "type": "array",
                        "items": {
                            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/agent_place_rels"
                        },
                        "unevaluatedItems": false
                    }
                },
                "required": [
                    "rel"
                ],
                "unevaluatedProperties": false
            },
            "unevaluatedItems": false
        },
        "cataloguer": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/change_log_entry"
            },
            "unevaluatedItems": false
        }
    },
    "required": [
        "ark",
        "type",
        "pref_name"
    ],
    "unevaluatedProperties": false
}