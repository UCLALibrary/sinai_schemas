{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/ms_obj.json",
    "title": "Manuscript Object",
    "description": "A manuscript or codex understood as a physical or virtual 'container' that has a structure (binding, collation, parts, substrate) and its own history and provenance",
    "type": "object",
    "properties": {
        "ark": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
        },
        "reconstruction": {
            "type": "boolean"
        },
        "type": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/controlled_term"
        },
        "shelfmark": {
            "type": "string"
        },
        "summary": {
            "type": "string"
        },
        "extent": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/extent"
        },
        "weight": {
            "type": "string"
        },
        "dim": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/dim"
        },
        "state": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/states"
        },
        "fol": {
            "description": "A string expressing the foliation of the object in a semi-controlled format",
            "type": "string"
        },
        "coll": {
            "description": "A string expressing the collation of the object following a semi-controlled format, such as a collational formula",
            "type": "string"
        },
        "features": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/controlled_term"
            },
            "unevaluatedItems": false
        },
        "part": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/part.json"
            },
            "minItems": 1,
            "unevaluatedItems": false
        },
        "layer": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
                    },
                    "label": {
                        "type": "string"
                    },
                    "type": {
                        "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/controlled_term",
                        "enums": [
                            {
                                "id": "undertext",
                                "label": "Undertext"
                            },
                            {
                                "id": "guest",
                                "label": "Guest Content"
                            }
                        ]
                    },
                    "locus": {
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "label",
                    "type"
                ],
                "unevaluatedProperties": false
            },
            "unevaluatedItems": false
        },
        "para": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/paracontent.json"
            },
            "unevaluatedItems": false
        },
        "location": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ms_location"
            },
            "minItems": 1,
            "unevaluatedItems": false
        },
        "assoc_date": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/assoc_date.json"
            },
            "unevaluatedItems": false
        },
        "assoc_name": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/assoc_name.json"
            },
            "unevaluatedItems": false
        },
        "assoc_place": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/assoc_place.json"
            },
            "unevaluatedItems": false
        },
        "note": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/note.json"
            },
            "unevaluatedItems": false
        },
        "related_mss": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/related_mss.json"
            },
            "unevaluatedItems": false
        },
        "viscodex": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/viscodex.json"
            },
            "unevaluatedItems": false
        },
        "bib": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/bib.json"
            },
            "unevaluatedItems": false
        },
        "iiif": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/iiif.json"
            },
            "unevaluatedItems": false
        },
        "desc_provenance": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/desc_provenance"
        },
        "image_provenance": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/image_provenance"
        },
        "cataloguer": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/change_log_entry"
            },
            "unevaluatedItems": false
        },
        "reconstructed_from": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
            },
            "unevaluatedItems": false
        }
    },
    "required": [
        "ark",
        "reconstruction",
        "type",
        "shelfmark",
        "extent",
        "state",
        "part",
        "location"
    ],
    "unevaluatedProperties": false,
    "if": {
        "properties": {
            "reconstruction": {"const": true}
        },
        "required": ["reconstruction"]
    },
    "then": {
        "properties": {
            "type": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/ms_obj_reconstructed_types"
            },
            "reconstructed_from": {
                "type": "array",
                "items": {
                    "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/utils.json#/$defs/ark"
                },
                "unevaluatedItems": false
            }
        },
        "required": ["reconstructed_from"]
    },
    "else": {
        "properties": {
            "type": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/ms_obj_real_types"
            }
        }
    }
}