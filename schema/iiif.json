{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/iiif.json",
    "title": "IIIF",
    "description": "Information related to a IIIF manifest for a given object",
    "type": "object",
    "properties": {
        "type": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/iiif_types"
        },
        "label": {
            "type": "string"
        },
        "manifest": {
            "type": "string",
            "format": "uri"
        },
        "text_direction": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/iiif_text_directions"
        },
        "behavior": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_schemas/main/schema/enums.json#/$defs/iiif_behaviors"
        },
        "thumbnail": {
            "type": "string",
            "format": "uri"
        }
    },
    "required": [
        "type",
        "manifest",
        "label"
    ],
    "unevaluatedProperties": false
}